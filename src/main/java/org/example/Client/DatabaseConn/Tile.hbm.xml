<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "org.example.Client.Model.Board.Tile" table = "tile">

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "isWhite" column = "isWhite" type = "boolean"/>
        <property name = "isPicked" column = "isPicked" type = "boolean"/>
        <property name = "isPossible" column = "isPossible" type = "boolean"/>
    </class>
</hibernate-mapping>